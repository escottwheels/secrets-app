{
  "private": true,
  "homepage": "https://escottwheels.github.io/",
  "sideEffects": false,
  "scripts": {
    "build": "yarn run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"yarn run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/react": "1.0.6",
    "@prisma/client": "^4.3.1",
    "@remix-run/node": "^1.6.6",
    "@remix-run/react": "^1.6.6",
    "@remix-run/serve": "^1.6.6",
    "clsx": "^1.2.1",
    "evergreen-ui": "^6.10.3",
    "lint-staged": "^13.0.3",
    "prisma": "^4.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.3.0",
    "remix-auth-form": "^1.2.0",
    "tiny-invariant": "^1.2.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.6",
    "@remix-run/eslint-config": "^1.6.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  },
  "resolutions": {
    "eslint-import-resolver-typescript": "3.5.1"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx}": "eslint --fix"
  }
}
